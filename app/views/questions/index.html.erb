<h1>Listing questions</h1>

<table class="table table-striped">
  <thead>
   <tr>
    <th>Questioncontent</th>
    <th>Category name</th>
    <th></th>
   </tr>
  </thead>
  <tbody>
      <% @questions.each do |question| %>
      <tr>
        <td><%= link_to simple_format(question.questionContent),  edit_question_path(question)%></td>
        <td><%= question.category.name %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-small" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Question', new_question_path %>
